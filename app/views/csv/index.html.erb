<h4>Vehicle Data</h4>

<% if @vehicles_data.present? %>
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>Name</th>
        <th>Nationality</th>
        <th>Email</th>
        <th>Model</th>
        <th>Year</th>
        <th>Chassis Number</th>
        <th>Color</th>
        <th>Registration Date</th>
        <th>Odometer Reading</th>
      </tr>
    </thead>
    <tbody>
      <% @vehicles_data.each do |vehicle| %>
        <tr>
          <td><%= vehicle.customer.name %></td>
          <td><%= vehicle.customer.nationality %></td>
          <td><%= vehicle.customer.email %></td>
          <td><%= vehicle.model %></td>
          <td><%= vehicle.year %></td>
          <td><%= vehicle.chassis_number %></td>
          <td><%= vehicle.color %></td>
          <td><%= vehicle.registration_date %></td>
          <td><%= vehicle.odometer_reading %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No available data.<p> 
<% end %>

<div class="m-t-50">
  <h4>Import CSV Data</h4>
  <%= form_tag import_csv_path, multipart: true do %>
    <%= file_field_tag :file %>
    <%= submit_tag "Import CSV", class: 'btn btn-primary' %>
  <% end %>
</div>